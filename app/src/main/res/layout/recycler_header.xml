<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/recycler_header_avatar_image_view"
        android:layout_width="@dimen/size_avatar_image_view"
        android:layout_height="@dimen/size_avatar_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/recycler_header_name_text_view"
        style="@style/StyleGeneralText.Title"
        android:layout_marginStart="@dimen/small_padding"
        app:layout_constraintStart_toEndOf="@id/recycler_header_avatar_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_header_surname_text_view"
        style="@style/StyleGeneralText.Subtitle"
        android:layout_marginStart="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@id/recycler_header_name_text_view"
        app:layout_constraintStart_toEndOf="@id/recycler_header_avatar_image_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>